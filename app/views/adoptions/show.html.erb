<h1>Adoption Show</h1>

<%= render partial: "users/inventory" %>

<%= image_tag(@adoption.poke_pet.image) %>
<p>
    <%= @adoption.nickname %> | <%= @adoption.poke_pet.element %> Type | Lvl: <%= @adoption.level %><br>
    Species: <%= @adoption.poke_pet.name %><br>
    Hunger: <%= @adoption.hunger %><br>
    Thirst: <%= @adoption.thirst %><br>
    Happiness: <%= @adoption.happiness %><br>
    Exp: <%= @adoption.level %>
</p>

<% if @adoption.errors.any? || @adoption.user.errors.any? %>
  <div id="error_explanation">
    <h2>
      Sorry there was an error!
    </h2>
 
    <ul>
    <% @adoption.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
    <ul>
    <% @adoption.user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @adoption do |f| %>
    <%= f.hidden_field :adopt_action, :value => "feed" %>
    <%= f.submit "Feed" %>
<% end %>

<%= form_for @adoption do |f| %>
    <%= f.hidden_field :adopt_action, :value => "water" %>
    <%= f.submit "Water" %>
<% end %>

<%= form_for @adoption do |f| %>
    <%= f.hidden_field :adopt_action, :value => "play" %>
    <%= f.submit "Play" %>
<% end %>