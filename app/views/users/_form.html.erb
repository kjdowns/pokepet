<% if user.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(user.errors.count, "error") %>
      prohibited your account from being created:
    </h2>
 
    <ul>
    <% user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for user do |f| %>
    <%= f.label :username %>
    <%= f.text_field :user_name, class:"my-3" %><br>
    <%= f.label :password %>
    <%= f.password_field :password, class:"my-3" %><br>
    <%= f.submit "Create Account", class:"btn-lg btn-secondary my-5" %>
<% end %>