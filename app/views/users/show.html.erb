<h1 class="text-center">Welcome to PokePet, <%= current_user.user_name %>!</h1>

<h2 class="text-center">Your Adoptions</h2>

<div class="row">
    <% current_user.adoptions.each do |adopt| %>
        <div class="card col-lg-3 mx-4 my-2 p-2">
            <%= image_tag adopt.poke_pet.image, class:"card-img-top" %>
            <h4 class="card-title text-center my-2">
                <%= adopt.nickname %> - Lvl: <%= adopt.level %>
            </h4>
            <div class="card-body d-flex">
                <%= button_to "Visit", user_adoption_path(current_user, adopt), method: :get, class:"btn" %> 
                <%= button_to "Release", adoption_path(adopt), method: :delete, class:"btn" %>
            </div>
        </div>
    <% end %>
</div>

<div class="container text-center">
    <%= render partial: "inventory" %>
</div>