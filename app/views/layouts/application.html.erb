<!DOCTYPE html>
<html>
  <head>
    <title>Pokepet</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">

      <% if !!current_user %>
        <nav class="navbar navbar-expand-lg navbar-light">

          <div class="collapse navbar-collapse justify-content-center" id="navbarSupportedContent">
            <ul class="navbar-nav">
              <li class="nav-item active">
                <%= link_to "Home", user_path(current_user), class: "nav-link px-3 mx-3" %>
              </li>
              <li class="nav-item active">
                <%= link_to "Shelter", poke_pets_path, class: "nav-link px-3 mx-3" %>
              </li>
              <li class="nav-item active">
                <%= link_to "Town", towns_path, class: "nav-link px-3 mx-3" %>
              </li>
              <li class="nav-item active">
                <%= link_to "Log Out", logout_path, class: "nav-link px-3 mx-3" %>
              </li>
            </ul>
          </div>
        </nav>
      <% end %>

    <% flash.each do |type, msg| %>
      <div class="alert alert-info">
        <%= msg %>
      </div>
    <% end %>

    <%= yield %>
  </div>  
  </body>
</html>
